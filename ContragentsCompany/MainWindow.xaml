<Window x:Name="MainForm" x:Class="ContragentsCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContragentsCompany"
        mc:Ignorable="d"
        Title="MainWindow" Width="700" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="340" Closing="MainForm_Closing">
    <Grid>
        <Button x:Name="bSearch" Content="Пошук записів" Margin="20,160,0,0" VerticalAlignment="Top" Width="300" Height="120" Click="bSearch_Click" FontSize="14" HorizontalAlignment="Left"/>
        <Button x:Name="bGraphics" Content="Графіки" Margin="0,160,20,0" VerticalAlignment="Top" Width="300" Height="120" HorizontalAlignment="Right" FontSize="14" Click="bGraphics_Click"/>
        <Button x:Name="bCompanyName" Content="Список контрагентів" Margin="20,20,0,0" VerticalAlignment="Top" Width="300" Height="120" HorizontalAlignment="Left" FontSize="14" Click="bCompanyName_Click"/>
        <Button x:Name="bCreateRecord" Content="Створити нові записи" Margin="0,20,20,0" VerticalAlignment="Top" Width="300" Height="120" HorizontalAlignment="Right" Click="bCreateRecord_Click" FontSize="14"/>
    </Grid>
</Window>

